<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="-5sp"
    android:paddingRight="-5sp"
    android:paddingTop="0sp"
    tools:context="com.example.owenzx.jy_zx_1.MessageActivity"
    android:background="#eeeeee">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100sp"
        card_view:cardCornerRadius="0dp"
        card_view:cardBackgroundColor="#fff"
        card_view:cardElevation="2dp"
        android:id="@+id/comment_message">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="评论消息"
            android:textSize="30sp"
            android:id="@+id/comment"
            android:layout_below="@+id/deal_message"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="120dp"
            />

    </android.support.v7.widget.CardView>>



    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100sp"
        card_view:cardCornerRadius="0dp"
        card_view:cardBackgroundColor="#fff"
        card_view:cardElevation="2dp"
        android:id="@+id/deal_message"
        android:layout_below="@+id/comment_message"
        android:layout_alignLeft="@+id/comment_message"
        android:layout_alignStart="@+id/comment_message"
        android:layout_marginTop="0dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="交易消息"
            android:textSize="30sp"
            android:id="@+id/deal"
            android:layout_below="@+id/deal_message"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="120dp" />

    </android.support.v7.widget.CardView>


</RelativeLayout>