<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollView"
    android:background="#eeeeee"
    android:fillViewport="false">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="-5sp"
        android:paddingRight="-5sp"
        android:paddingTop="0sp"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context=".MainActivity"
        android:orientation="vertical"
        >

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            card_view:cardCornerRadius="0dp"
            card_view:cardBackgroundColor="#fff"
            card_view:cardElevation="2dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="15sp"
                android:paddingRight="15sp"
                android:paddingTop="10sp"
                android:paddingBottom="5sp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:id="@+id/name"
                    android:textSize="25sp"
                    android:textColor="#000000"
                    android:layout_alignParentTop="true"
                    android:layout_alignRight="@+id/true_name"
                    android:layout_alignEnd="@+id/true_name" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="真实姓名"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:layout_marginTop="60dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:id="@+id/textView2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TrueName"
                    android:id="@+id/true_name"
                    android:textColor="#000000"
                    android:textSize="17sp"
                    android:layout_below="@+id/textView2"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="联系电话"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:id="@+id/textView3"
                    android:layout_below="@+id/true_name"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phone"
                    android:id="@+id/phone"
                    android:textColor="#000000"
                    android:textSize="17sp"
                    android:layout_below="@+id/textView3"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="E-mail"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:id="@+id/textView4"
                    android:layout_marginTop="20dp"
                    android:layout_below="@+id/phone"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="E-mail"
                    android:id="@+id/email"
                    android:textColor="#000000"
                    android:textSize="17sp"
                    android:layout_below="@+id/textView4"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="QQ"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:id="@+id/textView5"
                    android:layout_marginTop="20dp"
                    android:layout_below="@+id/email"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="QQ"
                    android:id="@+id/qq"
                    android:textColor="#000000"
                    android:textSize="17sp"
                    android:layout_below="@+id/textView5"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="地址"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:id="@+id/textView6"
                    android:layout_marginTop="20dp"
                    android:layout_below="@+id/qq"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address"
                    android:id="@+id/address"
                    android:textColor="#000000"
                    android:textSize="17sp"
                    android:layout_below="@+id/textView6"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Check the Product"
                    android:id="@+id/check_button"
                    android:layout_gravity="right"
                    android:layout_below="@+id/address"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"/>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="-5sp"
            android:paddingRight="-5sp"
            android:paddingTop="5sp"
            android:paddingBottom="5sp">

            <android.support.v7.widget.CardView
                android:layout_width="190dp"
                android:layout_height="70sp"
                card_view:cardCornerRadius="0dp"
                card_view:cardBackgroundColor="#fff"
                card_view:cardElevation="2dp"
                android:layout_marginRight="3dp"
                android:layout_marginEnd="3dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:id="@+id/accept_card">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="接受"
                    android:id="@+id/comment_num1"
                    android:textSize="20sp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="75dp" />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="190dp"
                android:layout_height="70sp"
                card_view:cardCornerRadius="0dp"
                card_view:cardBackgroundColor="#fff"
                card_view:cardElevation="2dp"
                android:id="@+id/reject_card">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="拒绝"
                    android:id="@+id/reject"
                    android:textSize="20sp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="75dp" />

            </android.support.v7.widget.CardView>

        </RelativeLayout>


    </LinearLayout>>

</ScrollView>